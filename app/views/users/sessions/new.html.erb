<div class="container mt-lg-5">
  <div class="card col-lg-5 mr-auto ml-auto p-lg-4">
    <h2 class="text-center">Iniciar Sesion</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= render 'shared/alerts' %>
      <div class="field mb-lg-3">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'w-100' %>
      </div>

      <div class="field mb-lg-3">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: 'w-100' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Iniciar Sesion", class: 'btn btn-success btn-block' %>
      </div>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>
